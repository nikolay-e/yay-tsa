# Yaytsa Environment Configuration
# ==============================================================================
# SECURITY WARNING: Never commit .env files with real credentials to git!
# ==============================================================================
#
# Copy this file to .env and customize for your environment.

# ============================================
# FRONTEND CONFIGURATION
# ============================================

# Client name displayed in server sessions
YAYTSA_CLIENT_NAME=Yaytsa

# Device name displayed in server sessions
YAYTSA_DEVICE_NAME=Docker

# Frontend port
FRONTEND_PORT=5173

# ============================================
# E2E TEST CONFIGURATION
# ============================================
# SECURITY: Only use test accounts, never production credentials!
#
# Preconfigured users: master, teftel, little, test, middle
# See server migration V1__init.sql for credentials
YAYTSA_TEST_USERNAME=
YAYTSA_TEST_PASSWORD=

# ============================================
# BACKEND CONFIGURATION
# ============================================

# Spring Profile (dev, prod, test)
SPRING_PROFILES_ACTIVE=dev

# === Database ===
DB_NAME=yaytsa
DB_USER=yaytsa
DB_PASSWORD=changeme
DB_PORT=5432

# === Server ===
SERVER_PORT=8096
LOG_LEVEL=INFO
APP_LOG_LEVEL=DEBUG

# === Media Library ===
# Path on host machine to mount as /media in container
MEDIA_PATH=./server/media

# === Logging ===
SCAN_ON_STARTUP=true

# ============================================
# USAGE
# ============================================
#
# Start full stack:
#   docker compose up
#
# Run E2E tests:
#   docker compose --profile test up
#
# Stop and clean:
#   docker compose down -v
