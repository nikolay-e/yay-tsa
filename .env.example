# Yaytsa Environment Configuration
# ==============================================================================
# SECURITY WARNING: Never commit .env files with real credentials to git!
# ==============================================================================
#
# Copy this file to .env and customize for your environment.
#
# DEPLOYMENT MODES:
#   Remote Jellyfin: Use external Jellyfin server
#   Local Backend:   Use Java-based backend with --profile local-backend

# ============================================
# BACKEND SELECTION
# ============================================

# Option 1: Remote Jellyfin Server (default)
# Set this to your Jellyfin server URL
REMOTE_JELLYFIN_URL=https://your-jellyfin-server.com

# Option 2: Local Java Backend
# Uncomment this line to use local backend (requires --profile local-backend)
# BACKEND_URL=http://localhost:8096

# ============================================
# FRONTEND CONFIGURATION
# ============================================

# Client name displayed in server sessions
YAYTSA_CLIENT_NAME=Yaytsa

# Device name displayed in server sessions
YAYTSA_DEVICE_NAME=Docker

# Production frontend port (--profile production)
FRONTEND_PORT=8080

# ============================================
# TEST CREDENTIALS (E2E Tests)
# ============================================
# SECURITY: Only use test accounts, never production credentials
YAYTSA_TEST_USERNAME=your-test-username
YAYTSA_TEST_PASSWORD=your-test-password

# ============================================
# LOCAL BACKEND CONFIGURATION
# (Only used with: docker compose --profile local-backend up)
# ============================================

# === Spring Profile ===
SPRING_PROFILES_ACTIVE=dev

# === Database ===
DB_NAME=yaytsa
DB_USER=yaytsa
DB_PASSWORD=changeme
DB_PORT=5432

# === Server ===
SERVER_PORT=8096
LOG_LEVEL=INFO
APP_LOG_LEVEL=DEBUG

# === Media Library ===
MEDIA_PATH=./server/media
ADDITIONAL_MEDIA_PATH=./server/additional-media
LIBRARY_ROOTS=/media
SCAN_THREADS=8
WATCH_ENABLED=false

# === Transcoding ===
TRANSCODE_ENABLED=true
FFMPEG_PATH=ffmpeg
MAX_CONCURRENT_TRANSCODES=4
TRANSCODE_TEMP_DIR=/app/temp/transcode

# === Image Processing ===
IMAGE_CACHE_DIR=/app/temp/images

# === Security ===
BCRYPT_STRENGTH=12
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:*,https://localhost:*
REQUIRE_SSL=false

# === Sessions ===
SESSION_TIMEOUT=30

# === API Documentation ===
SWAGGER_ENABLED=true

# === JVM Options ===
JAVA_OPTS_EXTRA=

# === Development ===
DEBUG_PORT=5005

# ============================================
# USAGE EXAMPLES
# ============================================
#
# Remote Jellyfin Backend (development):
#   docker compose --profile dev up
#
# Remote Jellyfin Backend (production):
#   docker compose --profile production up
#
# Local Java Backend:
#   1. Set BACKEND_URL=http://localhost:8096
#   2. docker compose --profile local-backend --profile dev up
#
# Local Backend Only (no frontend):
#   docker compose --profile local-backend up
