# Yaytsa Media Server Environment Configuration
# Copy this file to .env and customize for your environment

# === Spring Profile ===
# Options: dev, prod, test
SPRING_PROFILES_ACTIVE=dev

# === Database Configuration ===
DB_HOST=postgres
DB_PORT=5432
DB_NAME=yaytsa
DB_USER=yaytsa
DB_PASSWORD=changeme
DB_MAX_POOL_SIZE=20
DB_MIN_IDLE=5

# === Server Configuration ===
SERVER_PORT=8080
LOG_LEVEL=INFO
APP_LOG_LEVEL=DEBUG
SQL_LOG_LEVEL=WARN

# === Media Library Configuration ===
# Comma-separated list of media library root paths
LIBRARY_ROOTS=/media,/additional-media
SCAN_THREADS=8
WATCH_ENABLED=false

# Media paths for Docker volumes
MEDIA_PATH=./media
ADDITIONAL_MEDIA_PATH=./additional-media

# === Transcoding Configuration ===
TRANSCODE_ENABLED=true
FFMPEG_PATH=ffmpeg
MAX_CONCURRENT_TRANSCODES=4
TRANSCODE_TEMP_DIR=/app/temp/transcode

# === Image Processing Configuration ===
IMAGE_CACHE_DIR=/app/temp/images

# === Security Configuration ===
BCRYPT_STRENGTH=12
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:*,https://localhost:*
REQUIRE_SSL=false

# === Session Configuration ===
SESSION_TIMEOUT=30

# === API Documentation ===
SWAGGER_ENABLED=true

# === Development Tools ===
# Java debug port (only in dev profile)
DEBUG_PORT=5005

# === pgAdmin Configuration (dev profile only) ===
PGADMIN_EMAIL=admin@yaytsa.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# === Monitoring (monitoring profile) ===
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
GRAFANA_PLUGINS=

# === JVM Options ===
# Additional JVM options (added to default options)
JAVA_OPTS_EXTRA=
