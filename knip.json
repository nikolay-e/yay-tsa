{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "packages/core": {
      "entry": ["tests/**/*.ts"],
      "project": ["src/**/*.ts", "tests/**/*.ts"],
      "ignore": ["src/env.d.ts"]
    },
    "packages/platform": {
      "project": ["src/**/*.ts"]
    },
    "apps/web": {
      "entry": ["src/main.tsx", "src/App.tsx", "src/routes/**/*.tsx"],
      "project": ["src/**/*.{ts,tsx}"],
      "ignore": ["**/test-ids/**"],
      "paths": {
        "@/*": ["src/*"]
      }
    }
  },
  "ignoreDependencies": [
    "@commitlint/cli",
    "jsdom",
    "sharp",
    "vitest",
    "yaml",
    "@vitest/coverage-v8",
    "vite",
    "dotenv",
    "prettier-plugin-tailwindcss"
  ],
  "ignoreBinaries": ["pre-commit", "tsc"],
  "ignoreExportsUsedInFile": true,
  "ignore": ["apps/web/src/features/**/stores/*.ts", "apps/web/src/features/**/hooks/*.ts"]
}
