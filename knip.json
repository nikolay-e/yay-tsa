{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "packages/core": {
      "entry": ["tests/**/*.ts"],
      "project": ["src/**/*.ts", "tests/**/*.ts"],
      "ignore": ["src/env.d.ts"]
    },
    "packages/platform": {
      "project": ["src/**/*.ts"]
    },
    "packages/web": {
      "entry": [
        "src/routes/**/*.svelte",
        "src/routes/**/*.ts",
        "src/lib/**/*.ts",
        "src/lib/**/*.svelte"
      ],
      "project": ["src/**/*.{ts,svelte}"],
      "ignore": ["**/test-ids/**"],
      "paths": {
        "$lib/*": ["src/lib/*"]
      }
    }
  },
  "ignoreDependencies": [
    "svelte-gestures",
    "@commitlint/cli",
    "jsdom",
    "sharp",
    "vitest",
    "yaml",
    "@vitest/coverage-v8",
    "tslib",
    "vite",
    "dotenv"
  ],
  "ignoreBinaries": ["pre-commit", "tsc"],
  "ignoreExportsUsedInFile": true
}
